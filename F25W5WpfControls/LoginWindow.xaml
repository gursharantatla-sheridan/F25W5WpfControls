<Window x:Class="F25W5WpfControls.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F25W5WpfControls"
        mc:Ignorable="d"
        Title="LoginWindow" Height="329" Width="454" FontSize="20" FontWeight="Bold" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Canvas>
        <Label Content="Username" Canvas.Left="50" Canvas.Top="43"/>
        <Label Content="Password" Canvas.Left="56" Canvas.Top="105" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" Canvas.Left="159" TextWrapping="Wrap" Canvas.Top="47" Width="230" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <PasswordBox x:Name="pswPassword" Canvas.Left="159" Canvas.Top="109" Width="230" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="btnLogin" Content="Login" Canvas.Left="82" Canvas.Top="182" Height="54" Width="127" Background="#FFAAE098" Click="btnLogin_Click" IsDefault="True"/>
        <Button x:Name="btnCancel" Content="Cancel" Canvas.Left="240" Canvas.Top="182" Height="54" Width="127" Background="#FFF1B1A4" HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnCancel_Click" IsCancel="True"/>

    </Canvas>
</Window>
