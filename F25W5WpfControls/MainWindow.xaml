<Window x:Class="F25W5WpfControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F25W5WpfControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="20" FontWeight="Bold">
    <Canvas>
        <WrapPanel Canvas.Left="22" Canvas.Top="25" Width="138" Height="74" Background="#FFE6E0E0">
            <Button Content="Button 1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Button Content="Button 2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </WrapPanel>
        <Image Height="81" Canvas.Left="179" Canvas.Top="21" Width="154" Source="/Car.png"/>
        <GroupBox Height="144" Header="Hobbies" Width="173" Canvas.Left="22" Canvas.Top="119" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Canvas>
                <CheckBox x:Name="chkGardening" Content="Gardening" Canvas.Left="10" Canvas.Top="10"/>
                <CheckBox x:Name="chkTravelling" Content="Travelling" Canvas.Left="10" Canvas.Top="42"/>
                <CheckBox x:Name="chkSinging" Content="Singing" Canvas.Left="10" Canvas.Top="73"/>
            </Canvas>

        </GroupBox>
        <Button x:Name="btnGetHobbies" Content="Get Hobbies" Canvas.Left="200" Canvas.Top="140" Click="btnGetHobbies_Click"/>
        <TextBlock x:Name="txtOutput" Canvas.Left="507" TextWrapping="Wrap" Canvas.Top="285" Height="100" Width="253" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#FFC3F1E5"/>
        <GroupBox Height="143" Header="Gender" Width="173" Canvas.Left="22" Canvas.Top="262" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Canvas>
                <RadioButton x:Name="rdoFemale" Content="Female" Canvas.Left="10" Canvas.Top="10"/>
                <RadioButton x:Name="rdoMale" Content="Male" Canvas.Left="10" Canvas.Top="41" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <RadioButton x:Name="rdoOther" Content="Other" Canvas.Left="10" Canvas.Top="72" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </Canvas>
        </GroupBox>
        <Button x:Name="btnGetGender" Content="Get Gender" Canvas.Left="200" Canvas.Top="283" Click="btnGetGender_Click"/>
    </Canvas>
</Window>
